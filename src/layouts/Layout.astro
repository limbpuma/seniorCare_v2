---
import Head from '@/components/meta/Head.astro';
import Header from '@/components/common/Header.astro';
import Footer from '@/components/common/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title={title} />
	<body class="bg-white">
        <Header />
		<slot />
        <Footer />
	</body>
</html>
