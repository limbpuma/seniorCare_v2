---
import ContactForm from "../common/ContactForm.astro";
import Icon from "../common/Icon.astro";
import Section from "../common/Section.astro";
import TextBlock from "../common/TextBlock.astro";

interface ContactOption {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  subtitle: string;
  title: string;
  description: string;
  contactOptions: ContactOption[];
  contactForm: {
    title: string;
    inputFields: {
      type: string;
      placeholder: string;
    }[];
    selectOptions: string[];
    textareaPlaceholder: string;
    buttonText: string;
  };
}

const { subtitle, title, description, contactOptions, contactForm } =
  Astro.props;


const iconNameMap: Record<string, string> = {
  "fa-globe": "globe",
  "fa-map-marker-alt": "location",
  "fa-phone-alt": "mobilePhone",
  "fa-envelope": "envelope",
};
---

<Section background="white"
  padding="medium"
  width="medium"
  height="auto"
  id="experience-section"
  animation="fade-in"
  >
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center content-narrow">
      <div class="space-y-8">
        <div>
          <TextBlock
          subtitle={subtitle}
          title={title}
          description={description}
          alignment="left"
          textColor="text-deep-blue"
    />
          
        </div>        <div class="space-y-6">
          {
            contactOptions.map((option: ContactOption) => (
              <div class="flex items-start space-x-4 p-4 rounded-lg hover:bg-gray-50 transition-colors duration-200">
                <div class="bg-soft-orange p-3 lg:p-4 rounded-full text-deep-blue flex-shrink-0">
                  <Icon
                    icons={[{ name: iconNameMap[option.icon] || option.icon }]}
                    size="large"
                    variant="default"
                  />
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-ag-sub-heading font-semibold text-ag-sub-heading text-deep-blue mb-2">
                    {option.title}
                  </h3>
                  <p class="text-ag-body-text font-ag-body-text text-gray-700 leading-relaxed">
                    {option.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>      <div>
        <ContactForm size="medium" {...contactForm} />
      </div>
    </div>
</Section>
