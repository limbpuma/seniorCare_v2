---
interface Props {
  links: Array<{
    name: string;
    href: string;
    isAnchor?: boolean;
  }>;

  // Add any other props your component needs here
}

const { links } = Astro.props;
---

<ul class="flex flex-col md:flex-row items-center gap-4 md:gap-8 lg:gap-12">
  {
    links.map(({ name, href, isAnchor }) => (
      <li>        <a
          href={href}
          class="flex items-center py-3 md:py-2 px-2 md:px-0 text-gray-900 hover:text-primary text-base lg:text-lg rounded focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 min-h-[44px]"
          {...(isAnchor && { "data-nav-link": true })}
        >
          {name}
        </a>
      </li>
    ))
  }
</ul>

<style>
  .active {
    color: var(--color-primary-600);
  }
</style>
