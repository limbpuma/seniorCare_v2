---
import ReactSwiperSlider from "./Slider.jsx";

// Responsive icon classes - smaller on mobile, larger on desktop
const iconClasses = "text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl text-deep-blue";
// Responsive text classes - readable on mobile, impactful on desktop
const textClasses = "text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl font-bold text-deep-blue";
// Responsive wrapper classes - tighter spacing on mobile
const wrapperClasses = "flex items-center gap-2 sm:gap-4 md:gap-6 lg:gap-8 xl:gap-12";

const { slides } = Astro.props;
---

<div class="bg-gradient-to-r from-soft-orange via-soft-orange/95 to-yellow-400 py-6 sm:py-8 md:py-10 lg:py-12 w-full relative overflow-hidden">
  <!-- Animated gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-yellow-400/20 via-transparent to-soft-orange/20 animate-gradient-x pointer-events-none"></div>
  
  <div class="content-narrow relative z-10">
    <ReactSwiperSlider
      slides={slides}
      iconClass={iconClasses}
      textClass={textClasses}
      wrapperClass={wrapperClasses}
      divType="flex-center"
      client:load
    />
  </div>
</div>
