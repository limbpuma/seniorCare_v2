---
import Section from "./Section.astro";
import TextBlock from "./TextBlock.astro";

interface Testimonial {
  name: string;
  title: string;
  image: string;
  desc: string;
}

interface Props {
  titlesection: string;
  subtitlesection: string;
  items: Testimonial[];
}

const { titlesection, subtitlesection, items } = Astro.props;
---

<Section
  background="white"
  padding="medium"
  width="medium"
  height="auto"
  id="experience-section"
><div class="text-center mb-12 content-narrow">
    <TextBlock
      subtitle={subtitlesection}
      title={titlesection}
      titleGradient={true}
      alignment="center"
      textColor="text-deep-blue"
    />
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 content-narrow">
    {
      items.map((testimonial, index) => (        <div class="bg-gradient-to-br from-white via-soft-orange/10 to-accent/5 border border-soft-orange/30 p-6 lg:p-8 rounded-2xl shadow-lg h-full flex flex-col group">
          <div class="relative mb-4">
            <div class="absolute -top-3 -right-3 w-8 h-8 bg-gradient-to-r from-soft-orange to-accent rounded-full flex items-center justify-center shadow-lg">
              <i class="fa-solid fa-quote-right text-sm text-white" aria-hidden="true" />
            </div>
            <p class="text-ag-body-text font-ag-body-text italic text-gray-700 leading-relaxed flex-grow pr-6">
              "{testimonial.desc}"
            </p>
          </div>
          <div class="flex items-center mt-auto pt-4 border-t border-gradient-to-r from-transparent via-soft-orange/30 to-transparent">
            <div class="flex-shrink-0 mr-4">
              <div class="relative w-14 h-14 sm:w-16 sm:h-16">
                <img
                  src={testimonial.image}
                  alt={`Foto von ${testimonial.name}, ${testimonial.title}`}
                  class="w-full h-full object-cover rounded-full border-2 border-soft-orange"
                  loading="lazy"
                />
                <div class="absolute inset-0 rounded-full bg-gradient-to-br from-transparent to-accent/20 opacity-0"></div>
              </div>
            </div>
            <div>
              <h3 class="font-ag-sub-heading font-bold text-ag-sub-heading bg-gradient-to-r from-deep-blue to-primary bg-clip-text text-transparent">
                {testimonial.name}
              </h3>
              <p class="text-sm text-gray-600 font-medium">
                {testimonial.title}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Section>