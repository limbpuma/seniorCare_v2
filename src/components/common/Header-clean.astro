---
import Button from "../common/Button.astro";
import Icon from "../common/Icon.astro";
import Logo from "./Logo.astro";
import texts from "@/utils/texts.json";

const headerTexts = texts.header;

// Navegación simplificada usando únicamente rutas nativas de Astro
const NAVIGATION = [
  { name: headerTexts.nav.home, href: "/" },
  { name: headerTexts.nav.about, href: "/about" },
  { name: headerTexts.nav.services, href: "/services" },
  { name: headerTexts.nav.contact, href: "/contact" },
  { name: headerTexts.nav.faq, href: "/faq" },
];

// Obtener la URL actual para navegación activa
const currentPath = Astro.url.pathname;
---

<!-- 
  ASTRO-NATIVE HEADER - Sin JavaScript, navegación pura de Astro
-->

<header class="w-full backdrop-blur-sm bg-white/95 shadow-lg shadow-deep-blue/5 sticky top-0 z-50">
  <!-- Top Contact Bar -->
  <div class="bg-gradient-to-r from-primary/5 via-soft-blue/5 to-primary/5 text-ag-body-text border-b border-primary/10">
    <div class="max-w-7xl mx-auto">
      <div class="flex items-center justify-between py-2 px-3 md:px-2 lg:px-4">
        <!-- Left: Address & Phone -->
        <div class="flex items-center gap-2 md:gap-4">
          <!-- Address - Desktop only -->
          <a
            href="https://maps.app.goo.gl/UbA5eCbGWvF2pyPu9"
            target="_blank"
            rel="noopener noreferrer"
            class="hidden lg:flex items-center gap-2 text-sm hover:text-primary group"
            aria-label="Visit our location on Google Maps"
          >
            <Icon
              icons={[{ name: "mapMarker" }]}
              size="small"
              variant="default"
            />
            <span class="group-hover:text-primary transition-colors">
              {headerTexts.address}
            </span>
          </a>
          
          <!-- Phone - Always visible -->
          <a
            href={`tel:${headerTexts.phone}`}
            class="flex items-center gap-2 text-sm hover:text-primary group"
            aria-label={`Call us at ${headerTexts.phone}`}
          >
            <Icon
              icons={[{ name: "phone" }]}
              size="small"
              variant="default"
            />
            <span class="group-hover:text-primary transition-colors">
              {headerTexts.phone}
            </span>
          </a>
        </div>

        <!-- Right: Schedule & Social -->
        <div class="flex items-center gap-2 md:gap-4">
          <!-- Schedule -->
          <div class="flex items-center gap-2 text-xs md:text-sm">
            <Icon icons={[{ name: "clock" }]} size="small" variant="default" />
            <span>{headerTexts.schedule}</span>
          </div>
          
          <!-- Social Links - Medium+ screens -->
          <div class="hidden md:flex items-center gap-2">
            <Icon
              icons={[
                { name: "facebook", href: headerTexts.socialLinks.facebook },
                { name: "twitter", href: headerTexts.socialLinks.twitter },
                { name: "instagram", href: headerTexts.socialLinks.instagram },
              ]}
              size="small"
              variant="default"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="bg-white/90 backdrop-blur-md border-b border-primary/10 shadow-sm">
    <div class="max-w-7xl mx-auto">
      <div class="flex items-center justify-between py-2 px-3 md:px-2 lg:px-4 min-h-[4rem]">
        
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <a 
            href="/" 
            class="block focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-lg min-h-[44px] p-2 -m-2 group"
            aria-label="Go to homepage"
          >
            <Logo class="h-8 md:h-10 lg:h-12 w-auto group-hover:scale-105 transition-transform" color="dark" />
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center justify-center">
          <ul class="flex items-center gap-6 lg:gap-8">
            {NAVIGATION.map((link) => {
              const isActive = currentPath === link.href || 
                              (currentPath === '/' && link.href === '/');
              return (
                <li>
                  <a
                    href={link.href}
                    class={`relative px-3 py-2 text-base lg:text-lg font-medium transition-all duration-200 ease-out focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-lg min-h-[44px] flex items-center ${isActive ? 'text-primary' : 'text-gray-700 hover:text-primary'}`}
                    aria-current={isActive ? 'page' : undefined}
                  >
                    {link.name}
                    {isActive && (
                      <span 
                        class="absolute bottom-0 left-0 right-0 h-0.5 bg-primary rounded-full"
                        aria-hidden="true"
                      />
                    )}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>

        <!-- CTA Button and Mobile menu toggle -->
        <div class="flex items-center gap-2 md:gap-4 shrink-0">
          <!-- CTA Button - Desktop -->
          <Button 
            class="hidden md:inline-flex items-center text-sm lg:text-base py-2 px-3 lg:px-4" 
            variant="primary" 
            size="medium"
            href={`tel:${headerTexts.phone}`}
          >
            {headerTexts.buttonText}
          </Button>

          <!-- Mobile menu toggle - CSS only -->
          <div class="md:hidden">
            <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-checkbox sr-only" />
            <label 
              for="mobile-menu-toggle" 
              class="mobile-menu-button inline-flex items-center justify-center p-3 text-deep-blue rounded-xl hover:bg-primary/10 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 min-h-[44px] min-w-[44px] cursor-pointer transition-colors"
              aria-label="Toggle navigation menu"
            >
              <span class="sr-only">Toggle main menu</span>
              <svg
                class="w-6 h-6"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  class="hamburger-line hamburger-line-1"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16"
                />
                <path
                  class="hamburger-line hamburger-line-2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 12h16"
                />
                <path
                  class="hamburger-line hamburger-line-3"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 18h16"
                />
              </svg>
            </label>
          </div>
        </div>
      </div>

      <!-- Mobile menu - CSS only implementation -->
      <div class="mobile-menu md:hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-white/95 backdrop-blur-md border-t border-primary/20">
          <!-- Mobile Navigation Links -->
          <ul class="flex flex-col space-y-1">
            {NAVIGATION.map((link) => {
              const isActive = currentPath === link.href || 
                              (currentPath === '/' && link.href === '/');
              return (
                <li>
                  <a
                    href={link.href}
                    class={`block w-full px-4 py-3 text-left rounded-lg text-base transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 min-h-[44px] flex items-center ${isActive ? 'bg-primary/10 text-primary font-medium border-l-4 border-primary' : 'text-gray-700 hover:bg-gray-50 hover:text-primary'}`}
                    aria-current={isActive ? 'page' : undefined}
                  >
                    {link.name}
                  </a>
                </li>
              );
            })}
          </ul>
          
          <!-- Mobile CTA Button -->
          <div class="mt-4 px-2">
            <Button 
              class="w-full justify-center py-3"
              variant="primary" 
              size="medium"
              href={`tel:${headerTexts.phone}`}
            >
              {headerTexts.buttonText}
            </Button>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  /* CSS-only mobile menu implementation */
  .mobile-menu-checkbox {
    display: none;
  }
  
  .mobile-menu {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease-in-out;
  }
  
  /* Show mobile menu when checkbox is checked */
  .mobile-menu-checkbox:checked ~ div .mobile-menu {
    max-height: 500px !important;
    opacity: 1 !important;
  }
  
  /* Hamburger icon animations */
  .hamburger-line {
    transition: all 0.3s ease-in-out;
    transform-origin: center;
  }
  
  .mobile-menu-checkbox:checked + .mobile-menu-button .hamburger-line-1 {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  .mobile-menu-checkbox:checked + .mobile-menu-button .hamburger-line-2 {
    opacity: 0;
  }
  
  .mobile-menu-checkbox:checked + .mobile-menu-button .hamburger-line-3 {
    transform: rotate(-45deg) translate(7px, -6px);
  }
  
  /* Force hide mobile menu on larger screens */
  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
    
    .mobile-menu-button {
      display: none !important;
    }
  }
  
  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Enhanced focus states for accessibility */
  a:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
    border-radius: 4px;
  }
</style>

<!-- 
  ✅ ASTRO-NATIVE HEADER - Zero JavaScript Dependencies
  ✅ Navegación completamente funcional con rutas nativas de Astro
  ✅ Menú móvil usando CSS :checked pseudo-selector
  ✅ Smooth scrolling nativo del navegador
  ✅ Estados activos manejados por Astro en build time
  ✅ Sin dependencias JavaScript externas
  ✅ WCAG 2.2 compliant con tamaños de target 44px+
-->
