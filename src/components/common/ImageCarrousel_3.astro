---
import ReactSwiperSlider from "./Slider.jsx";
import Section from "./Section.astro";

interface Props {
  subtitle: string;
  title: string;
  offerings: {
    src: string;
    alt: string;
    text: string;
  }[];
}

const { subtitle, title, offerings } = Astro.props;

const imageClasses = "w-full h-[224px] object-cover rounded-xl transition-transform duration-300 group-hover:scale-110";
const textClasses = "text-white text-xl font-bold bg-gradient-to-r from-white to-white/90 bg-clip-text";
const wrapperClasses = "absolute bottom-0 left-0 bg-gradient-to-t from-deep-blue/90 via-deep-blue/70 to-transparent p-4 rounded-xl backdrop-blur-sm";
---

<Section background="primary"
padding="medium"
width="medium"
height="auto"
id="experience-section"
animation="zoom-in"
class="relative overflow-hidden">
    <!-- Enhanced gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary/95 to-deep-blue pointer-events-none"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-primary/20 via-transparent to-soft-blue/20 animate-gradient-x pointer-events-none"></div>
    
    <div class="relative z-10">
        <div class="text-center mb-12 animate-on-scroll fade-in">
          <p class="text-ag-sub-heading font-ag-sub-heading text-white/90 mb-2">
            {subtitle}
          </p>
          <h2 class="text-ag-h3 font-ag-h3 font-bold text-transparent bg-gradient-to-r from-white via-white to-soft-orange bg-clip-text">{title}</h2>
        </div>
        <div class="w-full relative glass-morphism rounded-2xl p-6 backdrop-blur-sm bg-white/5 border border-white/10 animate-on-scroll zoom-in" style="animation-delay: 0.2s">
          <ReactSwiperSlider
            slides={offerings}        imgClass={imageClasses}
        textClass={textClasses}
        wrapperClass={wrapperClasses}
        isImageSlider={true}        divType="flex-col"
        client:load
      />
    </div>
    </div>
</Section>
