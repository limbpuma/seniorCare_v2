---
import Button from "../common/Button.astro";
import Icon from "../common/Icon.astro";
import TextBlock from "../common/TextBlock.astro";
import Section from "../common/Section.astro";

interface Props {
  subtitle: string;
  title: string;
  description: string;
  listItems: string[];
  buttonText: string;
  buttonLink: string;
  mainImage: string;
  overlayImage: string;
}

const {
  subtitle,
  title,
  description,
  listItems,
  buttonText,
  buttonLink,
  mainImage,
  overlayImage,
} = Astro.props;
---


<Section
  background="white"
  padding="large"
  width="full"
  height="auto"
  id="experience-section"
  animation="slide-in"
>
  <div class="container mx-auto px-4 max-w-screen-xl">
    <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8">
      <div class="w-full lg:w-1/2">
        <TextBlock
        subtitle={subtitle}
        title={title}
        description={description}
        alignment="left"
        textColor="text-deep-blue"
        />
        
        <ul class="space-y-4 mb-8 lg:ml-8">
          {
            listItems.map((item) => (
              <li class="flex items-center text-ag-body-text font-ag-body-text mb-6 sm:mb-8 md:mb-10 max-w-3xl mx-auto">
                <Icon
                  icons={[{ name: "check" }]}
                  size="medium"
                  variant="accent"
                  customSize="text-xl"
                />
                <span class="ml-2">{item}</span>
              </li>
            ))
          }
        </ul>
        <div class="flex flex-wrap items-center lg:ml-8">
          <Button href={buttonLink} variant="primary" size="medium">
            {buttonText}
          </Button>
        </div>
      </div>

      <div class="w-full lg:w-1/2 relative">
        <div class="relative aspect-w-16 aspect-h-9">
          <img
            src={mainImage}
            alt="Main Image"
            class="w-full h-full object-cover rounded-lg shadow-lg"
            loading="lazy"
          />
          <img
            src={overlayImage}
            alt="Overlay Image"
            class="absolute bottom-0 right-0 w-2/3 h-2/3 object-cover rounded-lg shadow-lg border-4 border-white transform translate-y-1/4 translate-x-1/6"
            loading="lazy"
            />
        </div>
      </div>
    </div>
  </div>
</Section>
