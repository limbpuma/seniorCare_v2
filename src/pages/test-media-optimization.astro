---
import Layout from '../layouts/Layout.astro';
import OptimizedImage from '../components/common/OptimizedImage.astro';
import OptimizedVideo from '../components/common/OptimizedVideo.astro';
---

<Layout title="Test Media Optimization" page="home">
  <main class="max-w-4xl mx-auto p-8">
    <h1 class="text-3xl font-bold mb-8">Test Media Optimization</h1>
    
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">OptimizedImage Test</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <h3 class="text-lg font-semibold mb-2">Imagen 1: Experience</h3>
          <OptimizedImage
            src="/assets/img/nurse_doctor_senior_care.webp"
            alt="Test image 1"
            width={300}
            height={200}
            class="w-full h-48 object-cover rounded-lg"
          />
        </div>
        
        <div>
          <h3 class="text-lg font-semibold mb-2">Imagen 2: About</h3>
          <OptimizedImage
            src="/assets/img/nurse_doctor_senior_care_1.webp"
            alt="Test image 2"
            width={300}
            height={200}
            class="w-full h-48 object-cover rounded-lg"
          />
        </div>
      </div>
    </section>
    
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">OptimizedVideo Test</h2>
      <div>
        <h3 class="text-lg font-semibold mb-2">Video: Hero Background</h3>
        <OptimizedVideo
          src="/assets/video/nurse_talking_senior_wheelchair_4.webm"
          width={800}
          height={450}
          autoplay={true}
          loop={true}
          muted={true}
          controls={true}
          class="w-full h-64 object-cover rounded-lg"
        />
      </div>
    </section>
    
    <section>
      <h2 class="text-2xl font-bold mb-4">Standard IMG Tag Test</h2>
      <img 
        src="/assets/img/nurse_doctor_senior_care.webp" 
        alt="Standard img tag test"
        width="300"
        height="200"
        class="w-full max-w-sm h-48 object-cover rounded-lg"
      />
    </section>
  </main>
</Layout>
