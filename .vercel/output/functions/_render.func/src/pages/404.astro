---
import Layout from "../layouts/Layout.astro";
import Section from "../components/common/Section.astro";
import TextBlock from "../components/common/TextBlock.astro";
import ParallaxMedia from "../components/common/ParallaxMedia.astro";
import seniorCoupleImage from "/public/assets/img/doctor_senior_care_help_6.webp";

const page = "404";
const title = "404 - Seite nicht gefunden";

// After 5 seconds, redirect to home page
const redirectScript = `
  setTimeout(() => {
    window.location.href = '/';
  }, 5000);

  function goHome() {
    window.location.href = '/';
  }
`;

---

<Layout title="404 - Page Not Found" page={page}>
  <Layout title={title} page={page}>
  <Section 
    padding="large"
    width="full"    height="h-screen"
    id="hero-parallax-section"
    class="relative overflow-hidden"
  >
    <div class="flex flex-col items-center justify-center h-full text-center z-10 relative">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">404 - Seite nicht gefunden</h1>
      <p class="text-xl md:text-2xl mb-8 text-white">Die gesuchte Seite konnte leider nicht gefunden werden.</p>
      <button
        onclick="goHome()"
        class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded transition duration-300"
      >
        Zur Startseite
      </button>
      <p class="text-sm mt-4 text-white">Sie werden in 5 Sekunden automatisch weitergeleitet...</p>
    </div>
    <div class="absolute inset-0 w-full h-full parallax-container">
      <ParallaxMedia 
        type="image"
        src={seniorCoupleImage}
        alt="404 Error - Senior couple"
      />
    </div>
    <div class="relative z-10 container mx-auto h-full flex items-center justify-center">
      <div class="w-full max-w-3xl px-4 text-center">
        <TextBlock
          subtitle="Seite nicht gefunden"
          title="404"
          descriptionBold="Es tut uns leid, aber die gesuchte Seite konnte nicht gefunden werden"
          description="Sie werden in 5 Sekunden zur Startseite weitergeleitet"
          textColor="white"
          buttonText="Sofort zur Startseite"
          buttonVariant="primary"
          buttonSize="large"
          buttonHref="/"
        />
      </div>
    </div>
  </Section>
  <script set:html={redirectScript} />
</Layout>
</Layout>